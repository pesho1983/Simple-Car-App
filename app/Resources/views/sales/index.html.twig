{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sales list</h1>

    <table class="table-bordered table" style="table-layout: revert">
        <thead>
        <tr>
            <th>Cars</th>
            <th>Customer</th>
            <th>Discount</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for sale in sales %}
            <tr>
                <td><a href="{{ path('sales_show', { 'id': sale.id }) }}">{{ sale.cars }}</a></td>
                <td>{{ sale.customers }}</td>
                <td>{{ sale.discount }} %</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('sales_show', { 'id': sale.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('sales_edit', { 'id': sale.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('sales_new') }}">Create a new sale</a>

{% endblock %}

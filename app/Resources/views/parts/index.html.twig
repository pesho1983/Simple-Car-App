{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parts list</h1>

    <table class="table-bordered table" style="table-layout: revert">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for part in parts %}
            <tr>
                <td><a href="{{ path('parts_show', { 'id': part.id }) }}">{{ part.id }}</a></td>
                <td>{{ part.name }}</td>
                <td>{{ part.price }}</td>
                <td>{{ part.quantity }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('parts_show', { 'id': part.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('parts_edit', { 'id': part.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('parts_new') }}">Create a new part</a>

{% endblock %}

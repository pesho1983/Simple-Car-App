{% extends 'base.html.twig' %}

{% block body %}
    <h1>Customer</h1>

    <table class="table-bordered table">
        <tbody>
        <tr>
            <th>â„–</th>
            <td>{{ customer.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ customer.name }}</td>
        </tr>
        <tr>
            <th>Birthdate</th>
            <td>{% if customer.birthDate %}{{ customer.birthDate|date('Y-m-d') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Isyoungdriver</th>
            <td>{% if customer.isYoungDriver %}Yes{% else %}No{% endif %}</td>
        </tr>
        </tbody>
    </table>


    <a class="btn btn-primary" href="{{ path('customers_index') }}">Back to the list</a>

    <a class="btn btn-default" href="{{ path('customers_edit', { 'id': customer.id }) }}">Edit</a>

    {{ form_start(delete_form) }}
    <input class="btn btn-danger" type="submit" value="Delete">
    {{ form_end(delete_form) }}

{% endblock %}
